PORT=4000
DATABASE_URL="postgresql://unykorn:unykorn@localhost:5432/orgdb?schema=public"

# XRPL network: devnet | testnet | mainnet
XRPL_NETWORK=devnet
XRPL_RPC_MAINNET=wss://s1.ripple.com
XRPL_RPC_TESTNET=wss://s.altnet.rippletest.net:51233
XRPL_RPC_DEVNET=wss://s.devnet.rippletest.net:51233

# Xumm (optional, for non-custodial signing)
XUMM_API_KEY=
XUMM_API_SECRET=

# CORS origins (comma-separated). Leave empty to allow all in dev
# Example for Trustiva + Unykorn production setup:
# CORS_ORIGINS=https://trustiva.io,https://www.trustiva.io,https://unykorn.org,https://www.unykorn.org
CORS_ORIGINS=

# Branding (public config)
BRAND=XRPL Demo
NETWORK_LABEL=devnet

# Organization contact
ORG_CONTACT_EMAIL=admin@example.com
ORG_ADDRESS=123 Main St, Anytown, USA
